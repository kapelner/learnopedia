<%= link_to "Contributor View", {:action => "contributor_view", :id => @page.id} if user_signed_in? %>

<% if @page.no_content? %>
  <div id="no_content_message">
    There is no content yet on this page.
    <% if user_signed_in? %>
      Go to the contributor view to begin to build the learning interface for this page.
    <% else %>
      <%= link_to "Become a contributor", new_user_registration_path %> and help build Learnipedia.
    <% end %>    
  </div>
<% end %>

<div style="text-align:left;">
  <%= render 'prerequisites', :contributor => false %>
  <div class="wikipedia_text" id="student_view_wiki_text">
    <h2><%= @page.title %> </h2>
    <%= raw(@page.wikihtml_links_rewritten_concept_bundles_added_their_text_highlighted) %>
  </div>
</div>
<script type="text/javascript">
  var all_active_cb_spans = jQuery(".learnopedia_bundle_element_active").toArray();

  $(window).bind('load', function(){
    setup_concept_bundle_hovers_student();
  });
</script>
<%= render 'load_cb_stats' %>
<%= render 'message_when_cb_is_empty' %>