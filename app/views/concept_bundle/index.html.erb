<table width="100%">
  <tr>
    <td width="10%"></td>
    <td valign="center" align="center">
      <h2>
        <%= best_in_place @cb, :title, :type => :input, :path => {:action => :edit_title, :id => @cb.id}, :style => {:width => "400px"} %>
        <span style="font-size:10px;">(click the title to edit)</span>
      </h2>
    </td>
    <td valign="center" align="right" width="10%">
      <%= button_to ' Delete ',
        {:controller => :concept_bundle, :action => :delete, :id => @cb.id},
        {:confirm => "Are you sure?", :method => :delete} %>
    </td>
  </tr>
</table>


<div id="concept_bundle_text">
  <div class="wikipedia_text">
    <%= raw(@html_with_only_cb_showing) %>
  </div>
</div>

<h2>Add Questions for Concept</h2>
<%= render 'questions_for_concept_edit', :cb => @cb %>

<h2>Add Videos for Concept</h2>
<%= render 'add_video_for_concept' %>

<br />
<br />
<%= link_to %Q|Return to the main page "#{@cb.page.title}"|, :controller => :page, :action => :contributor_view, :id => @cb.page.id %>