<table cellspacing="5">
 <% @cb.questions_with_answers_by_difficulty.each_with_index do |q, i| %>
    <tr>
      <td valign="top">
        <div class="question_num_difficulty difficulty_level_<%= q.difficulty_level %>">
          <%= i + 1 %>
        </div>
      </td>
      <td>
        <span class="difficulty_level_<%= q.difficulty_level %>">
          <%= q.difficulty_level_text %>
        </span>
        <%= q.question_text %>
        <% if q.answers.empty? %>
          <div class="question_unlisted">
            (This question is currently unlisted because it has no answers associated with it)
          </div>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>