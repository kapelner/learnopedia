  <%= javascript_include_tag "application" %>
  <%= render 'shared/mathjax_support' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <center>    
    <div id="main">
      <!--<h1>Learnipedia</h1>-->
      <%= yield %>
    </div>
